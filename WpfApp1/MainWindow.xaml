<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конвертер документов" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button Content="Конвертировать PDF в Word" Click="ConvertPdfToWord_Click" Margin="10"/>
            <Button Content="Конвертировать Word в PDF" Click="ConvertWordToPdf_Click" Margin="10"/>
            <TextBlock x:Name="StatusTextBlock" Text="Статус: Ожидание..." Margin="10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>